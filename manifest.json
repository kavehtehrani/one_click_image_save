{
  "manifest_version": 3,
  "name": "One-Click Image Saver",
  "version": "1.0",
  "permissions": [
    "storage",
    "downloads",
    "contextMenus"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ]
}